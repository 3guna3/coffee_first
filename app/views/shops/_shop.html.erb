<div class="cards">
  <a href="/shops/<%= shop.id %>" class="cards-body">
    <div class="cards-header">
      <% if shop.img? %>
        <img src=<%= shop.img.url %>>
      <% else %>
        <%= image_tag "default-cafe.jpg" %>
      <% end %>
    </div>
    <div class="shop-title">
      <p><%= shop.name %></p>
    </div>
  </a>
  <div class="contents">
    <div class="shop-address">
      <p><%= shop.prefecture %><%= shop.address %></p>
    </div>
    <div class="shop-rate">
      <div class="average-review-rating" data-score=<%= shop.rate_average %>></div>
      <%= render "/layouts/average" %>
    </div>
  </div>
  <%= render partial: "layouts/link-box", locals: { object: shop } %>
</div>
