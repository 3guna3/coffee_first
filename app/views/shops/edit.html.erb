<div class="container">
  <h1 class="form-title">お店を編集</h1>
  <div class=row>
    <div class="col-md6 col-md-offset-3 form-wrapper">
      <%= form_with model: @shop, local: true do |f| %>
        <%= render 'layouts/error_messages', model: f.object %>
        <div class=form-group>
          <%= f.label :name, "店舗名" %>
          <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "最大50文字", maxlength: 50 %>
        </div>
        <div class=form-group>
          <%= f.label :prefecture, "都道府県" %>
          <%= f.select :prefecture, Shop.prefectures.keys.map {|k| [k, k]}, {}, {class: "form-control", style: "margin-bottom: 15px;", data: {} } %>
        </div>
        <div class=form-group>
          <%= f.label :address, "住所" %>
          <%= f.text_field :address, autofocus: true, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :TEL, "電話番号" %>
          <%= f.text_field :TEL, autofocus: true, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :URL, "URL" %>
          <%= f.url_field :URL, autofocus: true, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :img, "店舗画像" %><br />
          <%= f.file_field :img %>
        </div>
        <%= f.submit "登録", class: "btn btn-info btn-block form-submit-btn" %>
      <% end %>
    </div>
  </div>
</div>
