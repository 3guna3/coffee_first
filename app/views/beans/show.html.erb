<h1 class="title"><%= @bean.name %></h1>
<div class="shop-show">
  <div class="row">
    <div class="col-xl-4 shop-picture">
      <img src=<%= @bean.img.url %> class="img-fluid" alt="コーヒー豆のイメージ">
    </div>
    <div class="col-xl-8 shop-detail">
      <div class="row">
        <%= render "bean-about" %>
        <div class="col-lg-6 shop-comments">
          <h2 class="title show">Comments</h2>
          <%= render "bean-comments" %>
          <div class="comments">
            <%= form_for [@bean, @bean_comment] do |f| %>
              <table class="table table-borderless">
                <tbody>
                  <tr>
                    <th scope="row">内容</th>
                    <td colspan="2"><%= f.text_area :content %></td>
                  </tr>
                  <tr>
                    <th scope="row">苦味</th>
                    <td>
                      <div class="form-group" id="bitterness">
                        <%= f.label :bitterness, "苦味" %>
                        <%= f.hidden_field :bitterness, id: :review_star %>
                      </div>
                      <script>
                        $('#bitterness').empty();
                          $('#bitterness').raty({
                            size     : 36,
                            starOff:  '<%= asset_path('star-off.png') %>',
                            starOn : '<%= asset_path('star-on.png') %>',
                        
                            scoreName: 'beans_comment[bitterness]',
                            half: false,
                          });
                      </script>
                    </td>
                  </tr>
                  <tr>
                    <th scope="row">酸味</th>
                    <td>
                      <div class="form-group" id="acidity">
                        <%= f.label :acidity, "酸味" %>
                        <%= f.hidden_field :acidity, id: :review_star %>
                      </div>
                      <script>
                        $('#acidity').empty();
                          $('#acidity').raty({
                            size     : 36,
                            starOff:  '<%= asset_path('star-off.png') %>',
                            starOn : '<%= asset_path('star-on.png') %>',
                        
                            scoreName: 'beans_comment[acidity]',
                            half: false,
                          });
                      </script>
                    </td>
                  </tr>
                  <tr>
                    <th scope="row">コク</th>
                    <td>
                      <div class="form-group" id="body">
                        <%= f.label :body, "コク" %>
                        <%= f.hidden_field :body, id: :review_star %>
                      </div>
                      <script>
                        $('#body').empty();
                          $('#body').raty({
                            size     : 36,
                            starOff:  '<%= asset_path('star-off.png') %>',
                            starOn : '<%= asset_path('star-on.png') %>',
                        
                            scoreName: 'beans_comment[body]',
                            half: false,
                          });
                      </script>
                    </td>
                  </tr>
                  <tr>
                    <td colspan="2">
                      <div class="comment-button">
                        <%= f.submit "コメントする", class: "btn  btn-block form-submit-btn" %>
                      </div>
                    </td>
                  </tr>
                </tbody>
              </table>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
