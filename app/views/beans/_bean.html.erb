<div class="cards">
  <a href="/beans/<%= bean.id %>" class="cards-body">
    <div class="cards-header">
      <% if bean.img? %>
        <img src=<%= bean.image.url %> class="cards-image">
      <% else %>
        <img src="assets/default-beans.jpg" class="cards-image">
      <% end %>
    </div>
    <div class="cards-title">
      <P><%= bean.name %></P>
    </div>
  </a>
  <p>【苦味レベル】</p>
  <div class="average-review-rating" data-score=<%= bean.beans_comments.average(:bitterness) %>></div>
  <%= render "/layouts/average" %>
  <p>【酸味レベル】</p>
  <div class="average-review-rating" data-score=<%= bean.beans_comments.average(:acidity) %>></div>
  <%= render "/layouts/average"  %>
  <p>【コクレベル】</p>
  <div class="average-review-rating" data-score=<%= bean.beans_comments.average(:body) %>></div>
  <%= render "/layouts/average"  %>
  <p>
    <% if current_user && current_user.id == bean.user_id %>
      <%= link_to "編集", edit_bean_path(bean) %>
      <%= link_to "削除", bean_path(bean), method: :delete, data: { confirm: "削除しますか？" } %>
    <% end %>
  </p>
</div>
