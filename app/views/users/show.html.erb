<div class="profile-wrap">
  <div class="row">
    <div class="col-md-6 text-center">
      <img src=<%= @user.img.url %> class="icon-image">
    </div>
    <div class="col-md-6 text-center">
      <h1 class="title"><%= @user.name %></h1>
      <table class="table table-borderless">
        <tr>
          <th scope="row">Introduce</th>
          <td>
            <%= @user.self_introduction %>
          </td>
        </tr>
      </table>
      <div class="introduce">
        <p><%= @user.self_introduction %></p>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <h1 class="title">登録した焙煎店</h1>
    </div>
    <div class="col-md-6">
      <h1 class="title">登録したコーヒー豆</h1>
    </div>
  </div>
</div>
