<div class="profile-wrap">
  <div class="row">
    <div class="col-md-6 text-center">
      <img src=<%= @user.img.url %> class="icon-image">
    </div>
    <div class="col-md-6 text-center">
      <h1 class="title"><%= @user.name %></h1>
      <table class="table table-borderless">
        <tr>
          <th scope="row">Introduce</th>
          <td>
            <%= @user.self_introduction %>
          </td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <h1 class="title mt-5">登録した焙煎店</h1>
      <% @shops.each do |shop| %>
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title"><%= shop.name %></h5>
            <table class="table">
              <tr>
                <th scope="row">住所</th>
                <td><%= shop.prefecture %><%= shop.address %></td>
              </tr>
              <tr>
                <th scope="row">投稿日</th>
                <td><%= shop.created_at.strftime('%Y/%m/%d') %></td>
              </tr>
            </table>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-md-6">
      <h1 class="title mt-5">登録したコーヒー豆</h1>
      <% @beans.each do |bean| %>
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title"><%= bean.name %></h5>
            <table class="table">
              <tr>
                <th scope="row">価格</th>
                <td><%= bean.price %><span>円</span></td>
              </tr>
              <tr>
                <th scope="row">投稿日</th>
                <td><%= bean.created_at.strftime('%Y/%m/%d') %></td>
              </tr>
            </table>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
