<div class="profile-wrap">
  <div class="row">
    <div class="col-md-6 text-center">
      <img src=<%= @user.img.url %> class="icon-image">
    </div>
    <div class="col-md-6 text-center">
      <h1 class="title"><%= @user.name %></h1>
      <% if @user.self_introduction.present? %>
        <h6 class="introduction steel-gray bg-lemon"><%= @user.self_introduction %></h6>
      <% else %>
        <h6 class="introduction steel-gray bg-lemon"><%= @user.name %>です</h6>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <h1 class="title mt-5">登録した焙煎店</h1>
      <hr class="style-1">
      <% if @shops.present? %>
        <% @shops.each do |shop| %>
          <div class="card mb-4 rounded">
            <div class="card-body bg-lemon">
              <h5 class="card-title"><a href="/shops/<%= shop.id %>"><%= shop.name %></a></h5>
              <table class="table">
                <tbody>
                  <tr>
                    <th scope="row">住所</th>
                    <td><%= shop.prefecture %><%= shop.address %></td>
                  </tr>
                  <tr>
                    <th scope="row">投稿日</th>
                    <td><%= shop.created_at.strftime('%Y/%m/%d') %></td>
                  </tr>
                </tbody>
              </table>
              <p class="link-box">
                <% if user_signed_in? && current_user.id == shop.user_id %>
                  <%= link_to "編集", edit_shop_path(shop) %>
                  <%= link_to "削除", shop_path(shop), method: :delete, data: { confirm: "削除しますか？" } %>
                <% else %>
                  間違い
                <% end %>
              </p>
            </div>
          <% end %>
        <% end %>
      <% else %>
        <h3 class="text-center steel-gray">まだ登録がありません</h3>
      <% end %>
    </div>
    <div class="col-md-6">
      <h1 class="title mt-5">登録したコーヒー豆</h1>
      <hr class="style-1">
      <% if @beans.present? %>
        <% @beans.each do |bean| %>
          <div class="card mb-4">
            <div class="card-body bg-lemon">
              <h5 class="card-title"><a href="/beans/<%= bean.id %>"><%= bean.name %></a></h5>
              <table class="table">
                <tr>
                  <th scope="row">価格</th>
                  <td><%= bean.price %><span>円</span></td>
                </tr>
                <tr>
                  <th scope="row">投稿日</th>
                  <td><%= bean.created_at.strftime('%Y/%m/%d') %></td>
                </tr>
              </table>
              <p class="link-box">
                <% if current_user && current_user.id == bean.user_id %>
                  <%= link_to "編集", edit_bean_path(bean) %>
                  <%= link_to "削除", bean_path(bean), method: :delete, data: { confirm: "削除しますか？" } %>
                <% end %>
              </div>
            </div>
          <% end %>
        <% else %>
          <h3 class="text-center steel-gray">まだ登録がありません</h3>
        <% end %>
      </div>
    </div>
  </div>
